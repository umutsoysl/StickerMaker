<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/arkaplan"
                android:background="#88545454">

    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


    <RelativeLayout
            android:layout_width="wrap_content"
            android:paddingBottom="6dp"
            android:paddingTop="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/dialog_bg"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Enter Sticker Package Name"
                android:textSize="16dp"
                android:layout_marginTop="5dp"
                android:id="@+id/dialogdeneemeemsd"
                android:textColor="#1d1d1d"/>

        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#cecece"
                android:id="@+id/desd2"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/dialogdeneemeemsd"/>

        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/desd2"
                android:layout_marginBottom="12dp"
                android:textColor="#686868"
                android:background="#ffffff"
                android:maxLength="30"
                android:textColorHint="#686868"
                android:id="@+id/name"
                android:hint="Stickerpack name"
                android:textSize="14dp" />

        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#e7e7e7"
                android:id="@+id/imageline"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/name"/>



        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/imageline"
                android:layout_marginBottom="12dp"
                android:textColor="#686868"
                android:background="#ffffff"
                android:maxLength="30"
                android:textColorHint="#686868"
                android:id="@+id/author"
                android:hint="Stickerpack author"
                android:textSize="14dp" />


        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#e7e7e7"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:id="@+id/tempss"
                android:layout_marginTop="11dp"
                android:layout_below="@+id/author"/>

        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:id="@+id/desd"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/tempss"/>

        <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_below="@+id/desd"
                android:layout_marginTop="5dp"
                android:id="@+id/gonder"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:textColor="#17b119"
                    android:textSize="15dp"
                    android:id="@+id/yazi"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>

            <ProgressBar
                    android:id="@+id/loading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:minWidth="40dp"
                    android:visibility="invisible"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_below="@+id/desd"
                android:layout_marginTop="5dp"
                android:id="@+id/kapat"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textColor="#666666"
                    android:textSize="15dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
        </RelativeLayout>

    </RelativeLayout>


        <RelativeLayout android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/circle_white_bg"
                        android:layout_centerHorizontal="true">
            <ImageView android:layout_width="75dp"
                       android:layout_height="75dp"
                       android:layout_centerHorizontal="true"
                       android:layout_centerVertical="true"
                       android:id="@+id/troyIcon"/>

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>