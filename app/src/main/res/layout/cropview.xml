<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:background="@color/black"
                                             android:layout_height="match_parent">
   <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
             android:text="Do you want to save this sticker?"
             android:textColor="@color/white"
             android:textSize="30dp"
             android:layout_centerHorizontal="true"
             android:id="@+id/tempText"
             android:layout_margin="20dp"/>

    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:id="@+id/our_imageview"
               android:layout_centerVertical="true"
               android:layout_centerHorizontal="true"
               android:layout_above="@+id/butunPanel"
               android:layout_below="@+id/tempText"
               android:layout_marginBottom="20dp"
               />

    <LinearLayout android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:id="@+id/butunPanel"
                  android:layout_marginLeft="16dp"
                  android:layout_marginRight="16dp"
                  android:layout_height="wrap_content"
                  android:layout_alignParentBottom="true"
                  android:layout_below="@+id/stickerName"
                  android:layout_marginTop="10dp">
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="No,Try Again"
                android:textColor="@color/colorPrimary"
                android:paddingRight="16dp"
                android:layout_weight="1"
                android:paddingLeft="16dp"
                android:id="@+id/noTryAgain"
                android:layout_marginRight="16dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/buttonshapegray"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Yes,Save Sticker"
                android:textColor="@color/white"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:id="@+id/saveSticker"
                android:layout_weight="1"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/button_bg"/>

    </LinearLayout>
</RelativeLayout>