<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:background="@color/white"
                android:layout_height="wrap_content">

    <ImageButton android:layout_width="30dp" android:layout_height="30dp"
                 android:background="@drawable/close_red"
                 android:layout_toRightOf="@+id/stickerHeaderIcon"
                 android:id="@+id/removeImage"
                 android:layout_marginTop="7dp"/>

    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:id="@+id/stickerHeaderIcon"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/message_button"
                    android:layout_centerHorizontal="true">
        <ImageView  android:layout_width="65dp"
                    android:layout_height="65dp"
                   android:id="@+id/setImage"
                   android:layout_centerVertical="true"
                   android:layout_centerHorizontal="true"/>

        <ImageView android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:layout_margin="25dp"
                   android:id="@+id/choose_image"
                   android:background="@drawable/choose_image"/>
    </RelativeLayout>



</RelativeLayout>